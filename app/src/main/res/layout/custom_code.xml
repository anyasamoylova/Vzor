    <include
        android:id="@+id/index1"
        layout="@layout/custom_underline_digit"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"/>

    <include
        android:id="@+id/index2"
        layout="@layout/custom_underline_digit"
        android:layout_weight="1"
        android:layout_height="wrap_content"
