<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Vzor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/Theme.Vzor.Text.BaseText</item>
    </style>

    <style name="Theme.Vzor.Text">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.Vzor.Text.BaseText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Vzor.Text.SmallText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Vzor.ButtonText">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Vzor.Digit">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">36dp</item>
    </style>
</resources>